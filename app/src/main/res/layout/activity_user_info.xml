<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="deu.emergencysos.UserInfoActivity"
android:background="@color/abc_color_highlight_material">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/imageView"
    android:src="@drawable/unnamed"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="46dp" />

<TextView
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Emergency"
    android:id="@+id/textView"
    android:textSize="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@+id/imageView"
    android:layout_toStartOf="@+id/imageView"
    android:textColor="#d91d1d"
    android:shadowColor="#8d4545" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView"
    android:layout_alignParentStart="true"
    android:layout_marginTop="41dp"
    android:id="@+id/linearLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="SurName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="1" />
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout"
    android:layout_toStartOf="@+id/imageView"
    android:layout_marginTop="43dp"
    android:id="@+id/linearLayout2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_weight="1"
        android:text="Phone Number" />
</LinearLayout>

<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Female"
    android:id="@+id/radioButton"
    android:layout_below="@+id/linearLayout"
    android:checked="false"
    android:layout_alignEnd="@+id/imageView"
    android:layout_toEndOf="@+id/linearLayout2" />

<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Male"
    android:id="@+id/radioButton2"
    android:layout_alignBottom="@+id/linearLayout2"
    android:checked="false"
    android:layout_alignEnd="@+id/radioButton"
    android:layout_toEndOf="@+id/linearLayout2" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="I agree the conditions"
    android:id="@+id/checkBox"
    android:layout_marginTop="100dp"
    android:checked="false"
    android:layout_below="@+id/radioButton2"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/radioButton2" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/checkBox"
    android:layout_alignParentStart="true">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/button"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:onClick="onClick"
        android:theme="@style/AppTheme" />
</LinearLayout>

</RelativeLayout>
